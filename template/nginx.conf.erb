server {
    listen  <%= ENV['OPENSHIFT_NGINX_IP'] %>:<%= ENV['OPENSHIFT_NGINX_PORT'] %>;
    root    <%= ENV['OPENSHIFT_REPO_DIR'] %>public;

    location / {
        index  index.html index.htm;
    }
    
    location /test-lua {
        content_by_lua 'ngx.say("hello world!")';
    }
    
    location /test-echo {
        echo hello;
        echo world;
    }
}
